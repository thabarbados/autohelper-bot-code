{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "out-tsc",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es2020"
    ],
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "settings/bot-settings.ts",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}